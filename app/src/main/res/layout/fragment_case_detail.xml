<FrameLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="cn.xinxizhan.test.tdemo.components.casedetail.CaseDetailFragment">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:layout_gravity="bottom">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="270dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="标识码:"/>
                <TextView
                    android:id="@+id/attr_edit_fid"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content" />
                <ImageButton
                    android:id="@+id/attr_edit_location"
                    android:layout_width="45dp"
                    android:src="@drawable/zoom_to"
                    android:background="@color/white"
                    android:layout_height="24dp" />
                <ImageButton
                    android:id="@+id/attr_edit_caselist"
                    android:layout_width="45dp"
                    android:src="@drawable/list"
                    android:background="@color/white"
                    android:layout_height="24dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="行政区名称:"/>
                <TextView
                    android:id="@+id/attr_edit_xzqmc"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#fff"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="原地类名称:"/>
                <TextView
                    android:id="@+id/attr_edit_cc"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"></TextView>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#fff"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="是否耕地:"/>
                <RadioGroup
                    android:id="@+id/attr_edit_sfgd"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/attr_edit_sfgd_rbt1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="是" />

                    <RadioButton
                        android:id="@+id/attr_edit_sfgd_rbt2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="否"
                        android:textAlignment="textStart" />
                </RadioGroup>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#fff"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="是否撂荒:"/>
                <RadioGroup
                    android:id="@+id/attr_edit_sflh"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/attr_edit_sflh_rbt1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="是" />

                    <RadioButton
                        android:id="@+id/attr_edit_sflh_rbt2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="否" />
                </RadioGroup>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="实际地类:"/>
                <TextView
                    android:clickable="true"
                    android:hint="点击选择"
                    android:id="@+id/attr_edit_dlbm"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:scrollbars="vertical">
                </TextView>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#fff"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="调查人:"/>
                <TextView
                    android:id="@+id/attr_edit_dcr"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#fff"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal"
                android:visibility="gone">
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="调查时间:"/>
                <TextView
                    android:id="@+id/attr_edit_dcsj"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="备注:" />

                <EditText
                    android:id="@+id/attr_edit_memo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/bg_edittext"
                    android:gravity="left"
                    android:padding="8dip"
                    android:textSize="@dimen/input_text_size" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#fff"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="照片"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#fff"/>
            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/attr_edit_imagebox"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                app:flexWrap="wrap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/attr_edit_pictureadd"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="3dp"
                    android:background="@drawable/bg_border"
                    android:src="@drawable/add_picture" />
            </com.google.android.flexbox.FlexboxLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#fff"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/attr_edit_hc"
                    android:text="保存"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_btn_bottom"
                    android:textColor="@drawable/btn_text_selector"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
</FrameLayout>
